{
  "name": "@castora/pool-completer",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon --watch src --ext ts --ignore lib --exec \"npm run build && node lib/index.js\"",
    "postbuild": "npm run build --prefix ../../shared",
    "postinstall": "npm install --prefix ../../shared && npm run build --prefix ../../shared"
  },
  "dependencies": {
    "@castora/shared": "file:../../shared",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": "22"
  }
}
