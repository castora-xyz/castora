rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
   	match /chains/{document=**}/live/crypto {
    	allow get: if true;
    }
    
   	match /chains/{document=**}/live/stocks {
    	allow get: if true;
    }
    
    match /users/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
    }
  }
}