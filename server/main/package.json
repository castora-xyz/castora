{
  "name": "@castora/server",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon --watch src --ext ts --ignore lib --exec \"npm run build && node lib/index.js\"",
    "postbuild": "npm run build --prefix ../../shared",
    "postinstall": "npm install --prefix ../../shared && npm run build --prefix ../../shared"
  },
  "dependencies": {
    "@castora/shared": "file:../../shared",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "morgan": "^1.10.1",
    "nanoid": "^3.3.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": "22"
  }
}
