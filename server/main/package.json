{
  "name": "@castora/main-backend",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon --watch src --watch ../shared/src --ext ts --ignore lib --exec \"npm run build:deps && npm run build && node lib/index.js\"",
    "build:deps": "npm run build --workspace=@castora/shared",
    "clean": "rm -rf lib"
  },
  "dependencies": {
    "@castora/shared": "file:../shared",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "nanoid": "^3.3.11",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": "22"
  }
}
